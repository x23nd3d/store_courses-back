<h1>Cart</h1>

<div id="cart">
    {{#if courses.length}}
        <table>
            <thead>
            <tr>
                <th>Название</th>
                <th>Количество</th>
                <th>Действия</th>
            </tr>
            </thead>
            <tbody>

            {{#each courses}}
                <tr>
                    <td>{{title}}</td>
                    <td>{{count}}</td>
                    <td>
                        <button class="btn btm-small js-remove" data-id="{{id}}">Remove</button>
                    </td>
                </tr>
            {{/each}}
            </tbody>
        </table>

        <p><strong>Price:</strong> <span class="price">{{price}}</span></p>

        <form action="/orders" method="POST">
            <button type="submit" class="btn">Order now!</button>
        </form>
    {{else}}
        <h3>The cart is empty.</h3>
    {{/if}}
</div>