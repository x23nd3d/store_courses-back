<h1>My orders</h1>

{{# if orders.length}}
    {{# each orders}}
        <div class="row">
            <div class="col s6 offset-s3">
                <div class="card">
                    <div class="card-content">
                        <p>Order: {{_id}}</p>
                        <p class="date">{{date}}</p>
                        <p>User: {{user.name}} <em>({{user.email}})</em></p>
                        <ol>
                            {{# each courses}}
                                <li>
                                    <p>{{course.title}}  <em>x{{count}}</em></p>
                                </li>
                            {{/each}}
                        </ol>

                        <hr>
                        <p>Price: <span class="price">{{price}}</span></p>
                    </div>
                </div>
            </div>
        </div>
    {{/each}}
    {{else}}
    <p>No orders found.</p>
{{/if}}


