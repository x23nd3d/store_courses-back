<h1>Courses</h1>
<div id="courses">
<div class="c-body">
{{#if courses.length}}
    {{#each courses}}
        <div class="row">
            <div class="col s6 offset-s3">
                <div class="card">
                {{# if @root.isAuth}}
                    <form action="/cart/add" class="form-cart" method="POST">
                        <button class="btn-floating btn-large waves-effect waves-light red js-add" data-id="{{id}}"><i class="material-icons">add</i></button>
                        <input type="hidden" name="id" value="{{id}}">
                    </form>
                {{/if}}
                    <div class="card-image">
                        <img src="{{img}}" alt="{{title}}">
                    </div>
                    <div class="card-content">
                        <span class="card-title">{{title}}</span>
                        <p class="price">{{price}}</p>
                    </div>
                    <div class="card-action">
                        <a class="btn btn-main" href="/courses/{{id}}" target="_blank">Open course</a>
                        {{# if @root.isAuth}}
                            <div class="btns-control">
                                <a class="btn blue" href="/courses/{{id}}/edit?allowed=true">Edit Course</a>
                                <button class="btn red btn-remove c-remove" data-id="{{id}}">Delete Course</button>
                            </div>
                        {{/if}}


                    </div>
                </div>
            </div>
        </div>
    {{/each}}
    </div>
    </div>
{{else}}
    <h3>No courses added.</h3>
{{/if}}

